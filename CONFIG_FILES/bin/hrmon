#!/usr/bin/perl
use strict;
use warnings;

my $MAC = '00:22:D0:44:94:5A';

my $BLE_HRL_EXEC = "BLEHeartRateLogger.py";

my $USAGE = "Usage:
  $0 -h | --help
    show this message

  $0
  $0 --start | start
    run: pkill -f $BLE_HRL_EXEC
    run: $BLE_HRL_EXEC -b -v -m $MAC

  $0 --stop | stop
    run: pkill -f BLEHeartRateLogger.py
";

my $CMD_START = "start";
my $CMD_STOP = "stop";

sub main(@){
  my $cmd = $CMD_START;
  while(@_ > 0){
    my $arg = shift @_;
    if($arg =~ /^(-h|--help)$/){
      print $USAGE;
      exit 0;
    }elsif($arg =~ /^(--start|start)$/){
      $cmd = $CMD_START;
    }elsif($arg =~ /^(--stop|stop)$/){
      $cmd = $CMD_STOP;
    }else{
      die "$USAGE\nERROR: unknown arg $arg\n";
    }
  }

  if($cmd eq $CMD_START){
    system "pkill", "-f", $BLE_HRL_EXEC;
    exec $BLE_HRL_EXEC, "-b", "-v", "-m", $MAC;
  }elsif($cmd eq $CMD_STOP){
    system "pkill", "-f", $BLE_HRL_EXEC;
  }else{
    die "ERROR: unknown cmd $cmd\n"
  }
}

&main(@ARGV);
