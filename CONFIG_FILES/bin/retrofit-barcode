#!/usr/bin/perl
use strict;
use warnings;
use File::Basename qw(basename);
use Time::HiRes qw(sleep);

my $EXEC = basename $0;

my $IMG_FILE_BARCODE = "/media/sdcard/phone/retrofit_barcode_xid.png";

my $EXEC_IMG_VIEW = "img-view";
my $EXEC_FINGERTERM = "fingerterm";
my $EXEC_HRMON = "hrmon";
my $EXEC_UDO = "udo";

my $USAGE = "Usage:
  $EXEC -h|--help
    show this message

  $EXEC
    -run: $EXEC_HRMON --start
    -run: $EXEC_UDO $EXEC_FINGERTERM -e '$EXEC_HRMON --ensure-attach' &
    -run: $EXEC_IMG_VIEW $IMG_FILE_BARCODE
";

sub main(@){
  while(@_ > 0){
    my $arg = shift;
    if($arg =~ /^(-h|--help)$/){
      print $USAGE;
      exit 0;
    }else{
      die "ERROR: unknown arg $arg\n";
    }
  }

  system $EXEC_HRMON, "--start";
  system ""
    . "$EXEC_UDO $EXEC_FINGERTERM"
    . " -e '$EXEC_HRMON --ensure-attach'"
    . " &";
  sleep 0.2;

  exec $EXEC_IMG_VIEW, $IMG_FILE_BARCODE;
}

&main(@ARGV);
