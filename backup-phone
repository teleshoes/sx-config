#!/usr/bin/perl
use strict;
use warnings;

sub backup($);

my $dir = "$ENV{HOME}/Code/sx";

sub main(@){
  die "Usage: $0\n" if @_ != 0;

  print "making sure sx is ssh-able\n";
  system "sx", "-s", "echo found sx!\n";
  die "failed" if $? != 0;

  backup "dcim-backup";
  backup "sync-pixmirror";
  backup "backup-comm";
}

sub backup($){
  my $backupScript = shift;

  print "\n\n\n=========$backupScript\n";
  system "$dir/$backupScript";

  die "$backupScript failed" if $? != 0;
}

&main(@ARGV);
