sub main(@){
  my $script = "";
  for my $key(sort keys %$DCONF){
    my $val = $$DCONF{$key};
    $script .= "
      source /etc/bashrc
      echo -ne \"\\n$key\\n\"
      OLD=`dconf read $key`
      dconf write $key \"$val\"
      NEW=`dconf read $key`
      if [ \"\$OLD\" == \"\$NEW\" ]; then
        echo -ne \"  (no change)\\n\"
      else
        echo -ne \"  old:\$OLD\n\"
        echo -ne \"    =>\n\"
        echo -ne \"  new:\$NEW\\n\"
      fi
    ";
  }
  my $scriptFile = "$IPMAGIC_NAME-setup-dconf.sh";
  open FH, "> /tmp/$scriptFile";
  print FH $script;
  close FH;

  run "ipmagic", $IPMAGIC_NAME, "--scp", "/tmp/$scriptFile", ":/tmp/$scriptFile";
  run "ipmagic", $IPMAGIC_NAME, "bash", "/tmp/$scriptFile";
}

