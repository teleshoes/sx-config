sub gvariantList(@){
  if(@_ == 0){
    return "'[]'"; #have to wrap empty list in quotes for some reason
  }else{
    return "[" . join(", ", map {"'$_'"} @_) . "]";
  }
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
