      @CONFIG_FILE_REMOTE_DIRS
    update `ipmagic $IPMAGIC_NAME`:<CONFIG_FILE_REMOTE_DIR>$CR3_INI_FILE

  $0 -d|--diff|-n|--dryrun
    show what changes would be made by running --set
";

