sub main(@){
  if(@_ == 1 and $_[0] =~ /^(-h|--help)$/){
    print $usage;
  }elsif(@_ == 0 or (@_ == 1 and $_[0] =~ /^(--set)$/)){
    my $cfg = getConfig(getScaledFontSize());
    my $configFileRemoteDir = getConfigFileRemoteDir();
    my @configLines = readRemoteConfigLines($configFileRemoteDir);
    my @newConfigLines = updateConfigLines($cfg, @configLines);
    writeRemoteConfigLines($configFileRemoteDir, @newConfigLines);
  }elsif(@_ == 1 and $_[0] =~ /^(-d|--diff|-n|--dryrun)$/){
    my $cfg = getConfig(getScaledFontSize());
    my $configFileRemoteDir = getConfigFileRemoteDir();
    updateConfigLines($cfg, readRemoteConfigLines($configFileRemoteDir));
  }else{
    die $usage;
  }
}

sub getScaledFontSize(){
  my $resMinDim = getResMinDimension();

  my $scale = ($resMinDim - $LOW_RES_PX) / ($HIGH_RES_PX - $LOW_RES_PX);
  my $fontSize = $scale*($FONT_SIZE_HIGH_RES - $FONT_SIZE_LOW_RES) + $FONT_SIZE_LOW_RES;
  return $fontSize;
}

sub getResMinDimension(){
  my $resMin = `ipmagic $IPMAGIC_NAME res --min-dimension`;
  chomp $resMin;
  if($resMin !~ /^\d+$/){
    die "ERROR: `res` command failed\n";
  }
  return $resMin;
}

sub getConfigFileRemoteDir(){
  my @lines = `ipmagic $IPMAGIC_NAME ls -d @CONFIG_FILE_REMOTE_DIRS 2>/dev/null`;
  for my $line(@lines){
    for my $dir(@CONFIG_FILE_REMOTE_DIRS){
      if($line =~ /^$dir\/?$/){
        return $dir;
      }
    }
  }
  die "ERROR: no config file dirs exist\n@CONFIG_FILE_REMOTE_DIRS\n";
}

sub readRemoteConfigLines($){
  my ($configFileRemoteDir) = @_;
  my @cmd = ("ipmagic", $IPMAGIC_NAME, "cat", "$configFileRemoteDir/$CR3_INI_FILE");
  open CMD, "-|",  @cmd or die "ERROR: @cmd failed\n$!\n";
  my @lines = <CMD>;
  close CMD;
  return @lines;
}

sub writeRemoteConfigLines($@){
  my ($configFileRemoteDir, @lines) = @_;
  my $nowMillis = int(time * 1000.0 + 0.5);
  my $tmpFile = "/tmp/coolreader-$nowMillis-cr3.ini";

  open FH, "> $tmpFile" or die "could not write $tmpFile\n$!\n";
  print FH @lines;
  close FH;

  my $host = `ipmagic $IPMAGIC_NAME`;
  chomp $host;

  run "ipmagic", $IPMAGIC_NAME, "mkdir -p $configFileRemoteDir";
  run "scp", $tmpFile, "$USER\@$host:$configFileRemoteDir/$CR3_INI_FILE";

  run "rm", $tmpFile;
}

sub updateConfigLines($@){
  my ($cfg, @configLines) = @_;

  my @newConfigLines = (@configLines);
  for my $key(sort keys %$cfg){
    my $val = $$cfg{$key};

    my $found = 0;
    for my $line(@newConfigLines){
      if($line =~ /^\s*\Q$key\E\s*=\s*(.*)$/){
        my $oldVal = $1;
        if($oldVal ne $val){
          printf "%-40s: %s => %s\n", $key, $oldVal, $val;
        }

        $line = "$key=$val\n";
        $found = 1;
        last;
      }
    }

    if(not $found){
      printf "%-40s: %s => %s\n", $key, "<MISSING>", $val;
      push @newConfigLines, "$key=$val\n";
    }
  }
  return @newConfigLines;
}

sub run(@){
  print "@_\n";
  system @_;
}

&main(@ARGV);
