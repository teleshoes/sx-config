#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use PhoneBackupUtils;

my $USER = "nemo";
my $ROOT_USER = "root";
my $IPMAGIC_NAME = "sx";

my $BASE_DIR = "$ENV{HOME}/Code/sx";
my $BACKUP_DIR = "$BASE_DIR/backup/backup-lap";

my $SRC_DIR = "/home/$USER/.cache/lap";

sub run(@);

sub main(@){
  run "mkdir -p $BACKUP_DIR" if not -d $BACKUP_DIR;
  die "ERROR: $BACKUP_DIR is not a dir\n" if not -d $BACKUP_DIR;

  runRetry 5, "ipmagic", $IPMAGIC_NAME, "mkdir -p $SRC_DIR";

  my @cmd = ("ipmagic", $IPMAGIC_NAME, "-u", $ROOT_USER, "--rsync",
    "-avP",
    "--one-file-system",
    ":$SRC_DIR/",
    "$BACKUP_DIR/",
  );

  runRetry 5, @cmd;
}

&main(@ARGV);
