#!/usr/bin/perl
use strict;
use warnings;

my $IPMAGIC_NAME = "sx";
my $USER = "nemo";
my $COMM_TOOLS_DIR = "$ENV{HOME}/Code/sx/comm-tools";

my @HOME_RSYNC_FILES = qw(
  .bashrc
  .gitconfig
  .gpg
  .profile
  .secrets
  .vimrc
  wifi.conf
  wifi-auto.conf

  .config/gehomesdk.config
  .config/ha.conf
  .config/midea.conf
  .config/predictit-markets.conf
  .config/tasmota.conf
  .config/wemo-devices.conf

  .cache/workouts/viewfit-workouts-json/
  .cache/workouts/viewfit-workouts-combine
  .cache/workouts/viewfit-workouts-extra-info

  .config/qtemail/
  .vim/
  resolv/
);

my $USRLOCALBIN_LOCAL_DIR = "$ENV{HOME}/install/root-files/usr/local/bin";
my $USRLOCALBIN_REMOTE_DIR = "/usr/local/bin";
my @USRLOCALBIN_EXECS = qw(
  alarm
  gst-play
  ipmagic
  off-cmd
  term
  pulse-enable
  pulse-vol
  sshc
  vpn
);

my $HOMEBIN_LOCAL_DIR = "$ENV{HOME}/bin";
my $HOMEBIN_REMOTE_DIR = "/home/$USER/bin";
my @HOMEBIN_EXCLUDES = qw(
  alert-email
  bat
  chromium
  touchClick
);

my @SPECIAL_USER_RSYNCS = (
  ["$ENV{HOME}/.cache/robinhood/", "/home/$USER/.cache/robinhood/", []],
  ["$ENV{HOME}/.klomp/config-$IPMAGIC_NAME", "/media/sdcard/phone/klomp/config", []],
  ["$ENV{HOME}/.klomp/lib-$IPMAGIC_NAME", "/media/sdcard/phone/klomp/lib", []],
  ["$ENV{HOME}/DCIM/xddr/videos/good/", "/media/sdcard/phone/ddr-videos/", []],
  ["$ENV{HOME}/Music/sheet_music/shows/sheet_1080p/", "/media/sdcard/phone/sheet_music/shows/sheet_1080p/", []],
  ["$ENV{HOME}/Music/sheet_music/shows/music/", "/media/sdcard/phone/sheet_music/shows/music/", []],
  ["$ENV{HOME}/Music/sheet_music/trumpet/", "/media/sdcard/phone/sheet_music/trumpet/", []],
  ["/usr/share/alarms/", "/media/sdcard/phone/alarms/", []],
  ["/usr/share/sounds/custom/", "/media/sdcard/phone/sounds/", []],

  #transform symlinks to referent file/dir
  ["$ENV{HOME}/.config/ipmagic/", "/home/$USER/.config/ipmagic/", ["-L"]],
);
my @SPECIAL_ROOT_RSYNCS = (
  ["$COMM_TOOLS_DIR/sms_db_importer.py", "$USRLOCALBIN_REMOTE_DIR/", []],
);

my $INITIAL_USER_CMD = "
  mkdir -p /home/$USER/.config/qtemail && \
  mkdir -p /home/$USER/.klomp && \
  mkdir -p /home/$USER/.cache/workouts && \
  echo ok
";
my $FINAL_USER_CMD = "
  echo ok
";

my $INITIAL_ROOT_CMD = "
  mkdir -p /root/.config/qtemail && \
  if [ -L /root/bin ]; then rm -f /root/bin; fi && \
  if [ -d /root/bin ]; then rmdir /root/bin; fi && \
  ln -s /home/$USER/bin/ /root/bin && \
  mkdir -p /root/.cache/workouts && \
  echo ok
";
my $FINAL_ROOT_CMD = "
  echo ok
";

sub run(@);

sub main(@){
  die "Usage: $0\n" if @_ > 0;

  print "making sure $IPMAGIC_NAME is ssh-able\n";
  system "ipmagic", $IPMAGIC_NAME, "-s", "echo found $IPMAGIC_NAME!\n";
  die "failed" if $? != 0;

  print "\n\n===INITIAL COMMANDS\n";
  run "ipmagic", $IPMAGIC_NAME, "-u", $USER, $INITIAL_USER_CMD;
  run "ipmagic", $IPMAGIC_NAME, "-u", "root", $INITIAL_ROOT_CMD;

  print "\n\n===RSYNC /usr/local/bin FILES\n";
  my @usrlocalbinFiles = map {"$USRLOCALBIN_LOCAL_DIR/$_"} @USRLOCALBIN_EXECS;
  run("ipmagic", $IPMAGIC_NAME, "-u", "root", "--rsync", "-avP", @usrlocalbinFiles, ":$USRLOCALBIN_REMOTE_DIR/");

  print "\n\n===RSYNC ~/bin FILES\n";
  run("ipmagic", $IPMAGIC_NAME, "-u", $USER, "--rsync", "-avP", "$HOMEBIN_LOCAL_DIR/", ":$HOMEBIN_REMOTE_DIR/",
    map{"--exclude=$_"} @HOMEBIN_EXCLUDES);

  print "\n\n===RSYNC HOME FILES\n";
  for my $file(@HOME_RSYNC_FILES){
    run("ipmagic", $IPMAGIC_NAME, "-u", $USER, "--rsync", "-avP", "$ENV{HOME}/$file", ":~/$file");
    run("ipmagic", $IPMAGIC_NAME, "-u", "root", "--rsync", "-avP", "$ENV{HOME}/$file", ":~/$file");
  }

  print "\n\n===RSYNC SPECIAL FILES\n";
  for my $rsync(@SPECIAL_USER_RSYNCS){
    my ($src, $dest, $extraRsyncArgs) = @$rsync;
    run("ipmagic", $IPMAGIC_NAME, "-u", $USER, "--rsync", "-avP", @$extraRsyncArgs, $src, ":$dest");
  }
  for my $rsync(@SPECIAL_ROOT_RSYNCS){
    my ($src, $dest, $extraRsyncArgs) = @$rsync;
    run("ipmagic", $IPMAGIC_NAME, "-u", "root", "--rsync", "-avP", @$extraRsyncArgs, $src, ":$dest");
  }

  print "\n\n===FINAL COMMANDS\n";
  run "ipmagic", $IPMAGIC_NAME, "-u", $USER, $FINAL_USER_CMD;
  run "ipmagic", $IPMAGIC_NAME, "-u", "root", $FINAL_ROOT_CMD;
}

sub run(@){
  print "@_\n";
  system @_;
  if($? != 0){
    die "ERROR: \"@_\" failed\n";
  }
}

&main(@ARGV);
